{
  "compilerOptions": {
    "declaration": true,             // âœ… generates .d.ts files
    "declarationDir": "./dist",      // optional: same as outDir
    "emitDeclarationOnly": false,    // set to true if you want only types
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
